<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/fr_illusions_view">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gv_illusion_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="3"/>

        <ExpandableListView
            android:id="@+id/id_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone"/><!--todo-->

        <!--<GridView-->
            <!--android:id="@+id/gv_favourites_grid"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:numColumns="3"-->
            <!--android:visibility="gone"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/b_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favourites" />

        <Button
            android:id="@+id/b_switch_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_change_to_list" />

        <SearchView
            android:id="@+id/sv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>